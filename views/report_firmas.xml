<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="report_firmas_document">
      <t t-call="web.html_container">
        <t t-as="o" t-foreach="docs">
          <div class="page">
            <style>table, td, th {
              border: 1px solid black; 
              text-align:center;
              font-size: 16px; 
            }

            table {
              border-collapse: collapse;
              width: 100%;
            }

            td {
              vertical-align: left;
              width: 50%;
              font-size: 16px; 
            }
          </style>
            <table>
              <tr>
                <th colspan="7" style="text-align:center">Lista de Firmas - Recibo Salario 
                  <t t-esc="o.fecha_inicio"/>
                  al 
                  <t t-esc="o.fecha_final"/></th>
              </tr>
              <tr>
                <th>Empleado</th>
                <th>Firma</th>
              </tr>
              <t t-as="i" t-foreach="o.calculo_salario_ids.sorted(key=lambda b: b.empleado_id.name)">
                <tr>
                  <td style="text-align:left">
                    <t t-esc="i.empleado_id.name"/>
                  </td>
                  <td/>
                </tr>
              </t>
            </table>
          </div>
        </t>
      </t>
    </template>
  </data>
</openerp>