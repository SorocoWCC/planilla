                      <th> Abono Prestamo </th>
                      <td> ₡ <t t-esc="'{0:,.2f}'.format(int(i.prestamos))"/> </td>
                    </tr>
                  </t>
                  <t t-if=" i.ccss > 0 ">
                    <tr>
                      <th> Seguro </th>
                      <td> ₡ <t t-esc="'{0:,.2f}'.format(int(i.ccss))"/> </td>
                    </tr>  
