<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="report_sobres_document">
      <t t-foreach="docs" t-as="o">
        <div class="page">

          <style>
            table, td, th {
              border: 1px solid black; 
              text-align:center;
              font-size: 12px; 
            }

            table {
              border-collapse: collapse;
              width: 30%;
            }

            td{
              vertical-align: center;
              font-size: 12px; 
              width: 20%;
            }
            th{
              vertical-align: center;
              font-size: 12px; 
              width: 10%;
            }
          </style>


          <div  style="height: 40px;"> </div>

          <!-- Variables -->
          <t t-set="sobre" t-value="0"/>

          <!-- Sobres Alajuelita -->
          <t t-foreach="o.calculo_salario_ids" t-as="i">

            <t t-if="i.empleado_id.department_id.name == 'Alajuelita' ">
              <t t-set="sobre" t-value="sobre + 1"/>

              <t t-if=" i.total_salario > 0 ">
                <table>
                  <tr>
                    <th> Sobre</th>
                    <td> <t t-esc="sobre"/> </td>
                  </tr>
                  <tr>  
                    <th> Empleado </th>
                    <td style="text-align:left"> <t t-esc="i.empleado_id.name"/> </td>
                  </tr>
                  <t t-if=" i.ausencias > 0 ">
                    <tr>  
                      <th> Ausencias </th>
                      <td> ₡ <t t-esc="'{0:,.2f}'.format(int(i.ausencias))"/> </td>
                    </tr>
                  </t>
                  <t t-if=" i.feriados > 0 ">
                    <tr>  
                      <th> Feriados </th>
                      <td> ₡ <t t-esc="'{0:,.2f}'.format(int(i.feriados))"/> </td>
                    </tr> 
                  </t>
                  <t t-if=" i.rebajos > 0 ">   
